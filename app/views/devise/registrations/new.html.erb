<%= bootstrap_devise_error_messages! %>

<div class="row">
<div class="col-lg-3"></div>
<div class="col-lg-6">
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_up', default: 'Sign up') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
       <div class="form-group">
        <%= f.label :firstname %>
        <%= f.text_field :firstname, autofocus: true, class: 'form-control',style: "width:100%" %>
      </div>
       <div class="form-group">
        <%= f.label :lastname %>
        <%= f.text_field :lastname, autofocus: true, class: 'form-control',style: "width:100%" %>
      </div>
       <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: true, class: 'form-control', style: "width:100%"%>
      </div>
       <div class="form-group">
        <%= f.label :birthday %>
        <%= f.date_field :birthday, autofocus: true, class: 'form-control' ,style: "width:100%" %>
      </div>
       <div class="form-group">
        <%= f.label :address %>
        <%= f.text_area :address, autofocus: true, class: 'form-control',style: "width:100%" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' , style: "width:100%"%>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' ,style: "width:100%" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' , style: "width:100%"%>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
      <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<%= render 'devise/shared/links' %>
</div>
<div class="col-lg-3"></div>
</div>

